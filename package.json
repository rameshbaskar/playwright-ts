{
  "name": "playwright-ts",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "author": "Ramesh Baskarasubramanian <ramesh.baskarasubramanian@live.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "test:all": "playwright test",
    "test:e2e": "playwright test --project=ui",
    "e2e:headed": "playwright test --project=ui --headed",
    "e2e:debug": "playwright test --project=ui --debug",
    "e2e:interactive": "playwright test --project=ui --ui",
    "test:api": "playwright test --project=api",
    "api:debug": "playwright test --project=api --debug",
    "api:interactive": "playwright test --project=api --ui",
    "test:report": "playwright show-report",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "check": "yarn lint && yarn prettier:check && yarn build"
  },
  "devDependencies": {
    "@ngneat/falso": "8.0.2",
    "@playwright/test": "1.57.0",
    "@types/node": "25.0.9",
    "@types/pg": "8.16.0",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "bcrypt-ts": "8.0.0",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-playwright": "2.5.0",
    "eslint-plugin-prettier": "5.5.5",
    "pg": "8.17.2",
    "prettier": "3.8.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "packageManager": "yarn@4.12.0"
}
