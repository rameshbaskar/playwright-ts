{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "types": ["node", "@playwright/test"],
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "eslint.config.js", "tests/**/*", "playwright.config.ts", "globalSetup.ts"],
  "exclude": ["node_modules", "dist"]
}
